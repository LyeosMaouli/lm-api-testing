# API Testing Platform Environment Variables

# Application Settings
API_TESTING_APP_NAME="API Testing Platform"
API_TESTING_DEBUG=true
API_TESTING_HOST=127.0.0.1
API_TESTING_PORT=8000

# Security
API_TESTING_SECRET_KEY=your-secret-key-here-change-in-production
API_TESTING_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage Directories
API_TESTING_DATA_DIR=./data
API_TESTING_CONFIG_DIR=./config
API_TESTING_LOG_DIR=./data/logs

# Database
API_TESTING_DATABASE_URL=sqlite:///./data/app.db

# External Services
API_TESTING_WEBHOOK_BASE_URL=http://localhost:8000
API_TESTING_NGROK_ENABLED=false

# Logging
API_TESTING_LOG_LEVEL=INFO

# Brevo Service Configuration
BREVO_DEFAULT_SENDER_EMAIL=noreply@yourdomain.com
BREVO_DEFAULT_SENDER_NAME=Your Company Name
BREVO_API_KEY=xkeysib-your-brevo-api-key-here

